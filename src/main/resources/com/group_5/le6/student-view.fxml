<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.group_5.le6.StudentController"
      spacing="10" style="-fx-padding: 20;">

    <Label text="Student Management System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Student ID:"/>
            <TextField fx:id="idField" promptText="Enter ID"/>

            <Label text="Name:"/>
            <TextField fx:id="nameField" promptText="Enter Name"/>

            <Label text="Email:"/>
            <TextField fx:id="emailField" promptText="Enter Email"/>

            <Label text="Course:"/>
            <TextField fx:id="courseField" promptText="Enter Course"/>

            <HBox spacing="10">
                <Button text="Add Student" onAction="#handleAdd" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Attendance System" onAction="#handleAttendance" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </HBox>

    <Label text="Student List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="100"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="250"/>
            <TableColumn fx:id="courseColumn" text="Course" prefWidth="200"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Edit" onAction="#handleEdit" style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        <Button text="Delete" onAction="#handleDelete" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
