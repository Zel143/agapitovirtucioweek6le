<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.group_5.le6.AttendanceController"
      spacing="20" style="-fx-padding: 20;">

    <Label text="Attendance Management System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Login Pane -->
    <VBox fx:id="loginPane" spacing="20" style="-fx-alignment: center; -fx-max-width: 400px;">
        <Label text="Please Login to Access Attendance System" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        
        <VBox spacing="10">
            <Label text="Username:"/>
            <TextField fx:id="usernameField" promptText="Enter username"/>

            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" promptText="Enter password"/>

            <HBox spacing="10" style="-fx-alignment: center;">
                <Button text="Login" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;"/>
                <Button text="Back to Students" onAction="#handleBackToStudents" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>

        <Label text="Default credentials: admin / admin" style="-fx-font-size: 12px; -fx-text-fill: gray;"/>
    </VBox>

    <!-- Attendance Management Pane -->
    <VBox fx:id="attendancePane" spacing="20" visible="false" managed="false">
        
        <!-- Mark Attendance Section -->
        <VBox spacing="15" style="-fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-padding: 15; -fx-background-color: #F9F9F9;">
            <Label text="Mark Attendance" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <HBox spacing="15">
                <VBox spacing="5">
                    <Label text="Student:"/>
                    <ComboBox fx:id="studentComboBox" prefWidth="200" promptText="Select Student"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Date:"/>
                    <DatePicker fx:id="datePicker" prefWidth="150"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Status:"/>
                    <ComboBox fx:id="statusComboBox" prefWidth="120"/>
                </VBox>
                
                <VBox spacing="5" style="-fx-alignment: bottom-left;">
                    <Button text="Mark Attendance" onAction="#handleMarkAttendance" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 8 15;"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Attendance Records Table -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <HBox style="-fx-alignment: center-left;">
                <Label text="Attendance Records" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout" 
                        style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-padding: 5 10;"/>
            </HBox>
            
            <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="100"/>
                    <TableColumn fx:id="studentNameColumn" text="Student Name" prefWidth="200"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Navigation -->
        <HBox spacing="10" style="-fx-alignment: center;">
            <Button text="Back to Students" onAction="#handleBackToStudents" 
                    style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-padding: 8 15;"/>
        </HBox>
    </VBox>
</VBox>
