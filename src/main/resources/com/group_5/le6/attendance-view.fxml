<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.group_5.le6.AttendanceController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Attendance System" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <HBox spacing="10">
                <Button text="Back to Students" onAction="#switchToStudents" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>
            
            <Label text="Login to Attendance System" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200"/>
                
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>
            </GridPane>
            
            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" onAction="#login"/>
                <Button text="Clear" onAction="#clearFields"/>
            </HBox>
            
            <Separator prefWidth="400"/>
            
            <VBox spacing="10" alignment="CENTER">
                <Label text="Attendance Records" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TableView fx:id="attendanceTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="100"/>
                        <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="150"/>
                        <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
